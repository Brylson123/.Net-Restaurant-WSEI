@model IEnumerable<Restaurant.Models.Danie>

<h2>Stwórz zamówienie</h2>

<form method="post">
    <div class="form-group">
        <label for="adres">Adres dostawy</label>
        <input type="text" name="adres" class="form-control" placeholder="Podaj adres dostawy" required />
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Danie</th>
                <th>Cena</th>
                <th>Ilość</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var danie in Model)
            {
                <tr>
                    <td>@danie.Nazwa</td>
                    <td>@danie.Cena</td>
                    <td>
                        <input type="number" name="wybrane[@danie.Id]" value="0" min="0" class="form-control" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Zamów</button>
</form>
